<mvc:View
    xmlns:upload="sap.m.upload"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="docinfoextractui.ext.main.Main"
>
    <Page showHeader="false">
        <content>
            <HBox class="sapUiSmallMarginTop" justifyContent="Center">
                <RadioButtonGroup columns="4" selectedIndex="{localModel>/selectedIndex}">
                    <RadioButton text="Business Card" />
                    <RadioButton text="Invoice" />
                    <RadioButton text="Payment Advice" />
                    <RadioButton text="Purchase Order" />
                </RadioButtonGroup>
            </HBox>

            <upload:UploadSet
                id="idUploadSet"
                instantUpload="false"
                uploadButtonInvisible="true"
                uploadCompleted="onUploadComplete"
            >
                <upload:toolbar>
                    <OverflowToolbar>
                        <ToolbarSpacer />
                        <Button
                            type="Attention"
                            press="onUploadPress"
                            text="Upload Files"
                        />
                    </OverflowToolbar>
                </upload:toolbar>
            </upload:UploadSet>
            <Table items="{/Jobs}">
                <columns>
                    <Column>
                        <Text text="ID" />
                    </Column>
                    <Column>
                        <Text text="Processed Time" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column width="5rem">
                        <Text text="" />
                    </Column>
                </columns>
                <ColumnListItem>
                    <cells>
                        <Text text="{id}" />
                        <Text text="{processedTime}" />
                        <ObjectStatus
                            text="{status}"
                            inverted="true"
                            icon="{=${status} === 'DONE' ? 'sap-icon://accept' : 'sap-icon://alert'}"
                            state="{=${status} === 'DONE' ? 'Success' : 'Warning'}" />
                        <Button icon="sap-icon://refresh" type="Success" />
                    </cells>
                </ColumnListItem>
            </Table>
        </content>
    </Page>
</mvc:View>